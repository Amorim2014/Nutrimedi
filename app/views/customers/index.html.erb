<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_customer_path,
            :class => 'btn btn-primary' %>
            </br></br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:company_name) %></th>
      <th><%= model_class.human_attribute_name(:cnpj_cpf) %></th>
      <th><%= model_class.human_attribute_name(:ie_rg) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:cell_phone) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <!--<th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:neighborhood) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:postal_code) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>-->
      <th><%= model_class.human_attribute_name(:costumer_type) %></th>
      <!--<th><%= model_class.human_attribute_name(:created_at) %></th>-->
      <!--<th><%=t '.actions', :default => t("helpers.actions") %></th>-->
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.name, customer_path(customer) %></td>
        <td><%= customer.company_name %></td>
        <td><%= customer.cnpj_cpf %></td>
        <td><%= customer.ie_rg %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.cell_phone %></td>
        <td><%= customer.email %></td>
        <!--<td><%= customer.address %></td>
        <td><%= customer.number %></td>
        <td><%= customer.neighborhood %></td>
        <td><%= customer.city %></td>
        <td><%= customer.postal_code %></td>
        <td><%= customer.state %></td>-->
        <td><%= customer.customer_type_to_s %></td>
        <!--<td><%=l customer.created_at %></td>-->
        <td>
        <%= link_to t('.show', :default => t("helpers.links.show")),
                      customer_path(customer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_customer_path(customer), :class => 'btn btn-warning btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      customer_path(customer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
