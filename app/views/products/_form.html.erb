<%= form_for @product, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :store_price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :store_price, placeholder: 'Digite o valor sem ponto ou virgula', :class => 'form-control money' %>
    </div>
    <%=f.error_span(:store_price) %>
  </div>
  <div class="form-group">
    <%= f.label :price_one, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price_one, placeholder: 'Digite o valor sem ponto ou virgula', :class => 'form-control money' %>
    </div>
    <%=f.error_span(:price_one) %>
  </div>
  <div class="form-group">
    <%= f.label :price_two, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price_two, placeholder: 'Digite o valor sem ponto ou virgula', :class => 'form-control money' %>
    </div>

    <div class="form-group">
    <%= f.label :inactive, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :inactive, :class => 'form' %>
    </div>
    <%=f.error_span(:inactive) %>
    </div>

    <%=f.error_span(:price_two) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
    </div>
  </div>
  
<% end %>
